<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.0" fx:controller="application.SignUpController">
    <children>
        <Label layoutX="85.0" layoutY="42.0" text="Sign Up" textFill="black">
            <font>
                <Font name="Times New Roman Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="85.0" layoutY="100.0" text="Username" textFill="black" />
        <TextField fx:id="userNameField" layoutX="85.0" layoutY="120.0" prefHeight="25.0" prefWidth="200.0" />
        <Label layoutX="85.0" layoutY="160.0" text="Password" textFill="black" />
        <PasswordField fx:id="passwordField" layoutX="85.0" layoutY="180.0" prefHeight="25.0" prefWidth="200.0" />
        <Label layoutX="85.0" layoutY="220.0" text="Confirm Password" textFill="black" />
        <PasswordField fx:id="confirmPasswordField" layoutX="85.0" layoutY="240.0" prefHeight="25.0" prefWidth="200.0" />
        <Button fx:id="signUpButton" layoutX="85.0" layoutY="290.0" mnemonicParsing="false" text="Sign Up" onAction="#handleSingUp" />
    </children>
</AnchorPane>
